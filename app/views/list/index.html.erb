<% content_for :head do %>
  <%= requirejs_include_tag "list" %>
<% end -%>

<div id="list">
  <div class="container check_list_form_area">
    <%= form_tag({}, { :id => "search_form" }) do %>
      <%= select_tag("check_lists", options_from_collection_for_select(@check_lists, :id, :name)) %>
    <% end %>
  </div>
  <div id="list_item_area">
  </div>
</div>

<script type="text/template" id="list_item_template">
  <div class="row-fluid list-item">
    <div class="span3">
      <img src="{{= image_path}}" class="img-polaroid" />
    </div>
    <div class="span8">
      <div>
        <a href="{{= item_url }}" target="_blank">{{= title }}</a>
      </div>
      <div>
      <div>{{= creater_name }}, {{= publisher }}, {{= release_date }}</div>
      <div>{{= comment }}</div>
      </div>
      <div class="icons pull-right">
        <button type="button" class="btn btn-default btn-lg check-item">
          <i class="icon-check"></i>
        </button>
      </div>
    </div>
    <input type="hidden" value="{{= id }}" />
  </div>
</script>
